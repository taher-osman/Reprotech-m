# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-USE-SECURE-RANDOM-KEY

# Database Configuration
DATABASE_URL=sqlite:///reprotech.db

# JWT Configuration
JWT_SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-USE-SECURE-RANDOM-KEY
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Security Configuration
BLOCKED_IPS=
VALID_API_KEYS=
MASTER_API_KEY=CHANGE-THIS-IN-PRODUCTION
API_SECRET=CHANGE-THIS-IN-PRODUCTION

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379
RATELIMIT_DEFAULT=100 per hour

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-secure-app-password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking

